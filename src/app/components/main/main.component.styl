.list {
  list-style: none;
  padding: 0;
}

.item {
  padding: 8px 16px;
  border-bottom: 1px solid #ccc;
  cursor: pointer;
  transition: all .2s ease-in-out; 
  @media(pointer: fine) { 
    &:hover {
      box-shadow: 0 1px 6px rgba(0,0,0,0.12), 0 1px 4px rgba(0,0,0,0.12);
    }
  }
}

.name {
  font-size: 3rem;
  color: #3F51B5;
}

.type {
  font-size: 2rem;
  color: #3F51B5;
}

.age {
  font-size: 2rem;
  color: #3F51B5;
}